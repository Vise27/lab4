@model IEnumerable<lab4.Models.SensorData>

@{
    ViewData["Title"] = "Lecturas de Sensores";
}

<h1>Lecturas actuales</h1>

<p>
    <a asp-action="RegistrarLectura" class="btn btn-primary">Registrar nueva lectura</a> |
    <a asp-action="Graficos" class="btn btn-secondary">Ver gráficos</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Timestamp)</th>
            <th>@Html.DisplayNameFor(model => model.Temperatura)</th>
            <th>@Html.DisplayNameFor(model => model.Humedad)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Timestamp</td>
                <td>@item.Temperatura</td>
                <td>@item.Humedad</td>
            </tr>
        }
    </tbody>
</table>
